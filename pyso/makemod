#!/bin/zsh

emulate -L zsh

cd $(dirname $0)
PS4=
FLAGS=$(pkg-config --cflags --libs python3)
: ${CC:=gcc}

makeamod () {
  infile=$1
  outfile=../pylib/${infile%.*}.so
  if [[ $outfile -nt $infile ]]; then
    return
  fi
  shift
  setopt -x
  $CC $@ -Wall -O2 -shared -fPIC $infile -o $outfile ${=FLAGS}
}

makeamod X.c -lX11 -lXtst -lXss
